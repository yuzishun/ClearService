<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.clearservice.activity.mainfragment_activity.PayActivity">
    <include layout="@layout/title_text"></include>

    <LinearLayout
        android:background="@color/blue2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40">
        <TextView
            android:id="@+id/Text_times"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/f14"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/everoneActivity"
        android:layout_height="@dimen/d10" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_pay"
                    android:text="支付金额:"
                    android:textColor="@color/black_shou"
                    android:textSize="@dimen/f14"
                    android:paddingLeft="@dimen/d25"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/text_pay"
                    android:text="¥30"
                    android:textColor="@color/blue2"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/f16"
                    android:layout_marginLeft="@dimen/d2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/weixin_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image_weixin"
                    android:src="@mipmap/weixinpay"
                     android:layout_marginLeft="@dimen/d25"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d20" />
                <TextView
                    android:layout_toRightOf="@+id/image_weixin"
                    android:text="微信支付"
                    android:textColor="@color/black_shou"

                    android:layout_centerVertical="true"
                    android:textSize="@dimen/f16"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/weixin_check"

                    android:checked="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d25"
                    android:background="@drawable/check_state"
                    android:button="@null"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d20" />

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/zhifu_layout"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_zhifu"
                    android:src="@mipmap/pay_zhifubao"
                    android:layout_marginLeft="@dimen/d25"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d20" />
                <TextView
                    android:layout_toRightOf="@+id/image_zhifu"
                    android:text="微信支付"
                    android:textColor="@color/black_shou"

                    android:layout_centerVertical="true"
                    android:textSize="@dimen/f16"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/zhifu_check"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d25"
                    android:background="@drawable/check_state"
                    android:button="@null"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d20" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:background="@color/everoneActivity"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:text="确认支付"
                android:id="@+id/surepay"
                android:layout_marginTop="@dimen/d30"
                android:layout_marginLeft="@dimen/d30"
                android:layout_marginRight="@dimen/d30"
                android:textColor="@drawable/button_color_login_rigsg"
                android:background="@drawable/login_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
