<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.clearservice.activity.myframnet_Activity.RewardonActivity">
    <include layout="@layout/title_text"></include>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/everoneActivity"
        android:layout_height="@dimen/d10" />

        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/white"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/d15"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="@dimen/d10"

                            android:background="@mipmap/cehsi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="家庭保洁一小时"
                                android:textColor="@color/black_shou"
                                android:textSize="@dimen/f14"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/d20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="¥30.00"
                                android:textColor="@color/red_one"
                                android:textSize="@dimen/f14"
                                android:layout_centerVertical="true"
                                 android:layout_marginLeft="@dimen/d20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/everoneActivity"
                    android:layout_height="@dimen/d10" />
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/d15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="@dimen/d10"

                            android:background="@mipmap/cehsi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="@color/black_shou"
                            android:text="小红"
                            android:layout_marginLeft="@dimen/d25"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/f14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/everoneActivity"
                    android:layout_height="@dimen/d10" />
                <LinearLayout
                    android:visibility="gone"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="@dimen/d25"
                            android:layout_centerVertical="true"
                            android:text="打赏金额：¥30：00"
                            android:textColor="@color/blue2"
                            android:textSize="@dimen/f14"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="@dimen/d25"
                            android:layout_centerVertical="true"
                            android:text="支付方式：支付宝"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/f12"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="@dimen/d25"
                            android:layout_centerVertical="true"
                            android:text="支付时间：2018/07/16 10：23"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/f12"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="2.5"
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="选择打赏金额"
                            android:textColor="@color/black_shou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/d25"
                        android:layout_marginRight="@dimen/d25"
                        android:layout_marginBottom="@dimen/d10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:text="2元"
                                    android:gravity="center"
                                    android:visibility="visible"
                                    android:textColor="@drawable/button_color_login_rigsg"
                                    android:background="@drawable/shape_button_information"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:text="15元"
                                    android:gravity="center"
                                    android:enabled="false"
                                    android:visibility="visible"
                                    android:textColor="@drawable/button_color_login_rigsg"
                                    android:background="@drawable/shape_button_information"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:text="5元"
                                    android:gravity="center"
                                    android:enabled="false"
                                    android:visibility="visible"
                                    android:textColor="@drawable/button_color_login_rigsg"
                                    android:background="@drawable/shape_button_information"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:text="20元"
                                    android:gravity="center"
                                    android:enabled="false"
                                    android:visibility="visible"
                                    android:textColor="@drawable/button_color_login_rigsg"
                                    android:background="@drawable/shape_button_information"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:text="10元"
                                    android:enabled="false"
                                    android:gravity="center"
                                    android:visibility="visible"
                                    android:textColor="@drawable/button_color_login_rigsg"
                                    android:background="@drawable/shape_button_information"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.example.yuzishun.clearservice.Custom.ClearEditText
                                    android:background="@drawable/shape_woman"
                                    android:enabled="true"
                                    android:hint="自定义金额"
                                    android:gravity="center"
                                    android:textSize="@dimen/f10"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp" />

                                <!--<Button-->
                                    <!--android:text="15元"-->
                                    <!--android:gravity="center"-->
                                    <!--android:enabled="false"-->
                                    <!--android:visibility="visible"-->
                                    <!--android:textColor="@drawable/button_color_login_rigsg"-->
                                    <!--android:background="@drawable/shape_button_information"-->
                                    <!--android:layout_width="70dp"-->
                                    <!--android:layout_height="25dp" />-->
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:background="@color/everoneActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:text="确定"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/d30"
                    android:layout_marginLeft="@dimen/d30"
                    android:layout_marginRight="@dimen/d30"
                    android:textColor="@drawable/button_color_login_rigsg"
                    android:background="@drawable/login_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
