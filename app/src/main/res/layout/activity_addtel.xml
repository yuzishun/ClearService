<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.yuzishun.clearservice.activity.mainfragment_activity.AddtelActivity">

    <include layout="@layout/title_text"></include>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/everoneActivity"
        android:layout_height="@dimen/d10" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:background="@color/white"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/contact_id"
                        android:textColor="@color/black_shou"
                        android:textSize="@dimen/f15"
                        android:layout_marginLeft="@dimen/d25"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.example.yuzishun.clearservice.Custom.ClearEditText
                        android:id="@+id/name_cltext"
                        android:hint="@string/name_id"
                        android:textSize="@dimen/f15"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/gray_line"
                android:layout_height="0.1dp" />
            <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/number_id"
                        android:textColor="@color/black_shou"
                        android:textSize="@dimen/f15"
                        android:layout_marginLeft="@dimen/d25"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.example.yuzishun.clearservice.Custom.ClearEditText
                        android:id="@+id/number_cltext"
                        android:hint="@string/contact_number"
                        android:textSize="@dimen/f15"
                        android:inputType="number"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/gray_line"
                android:layout_height="0.1dp" />
            <LinearLayout
                android:id="@+id/layout_search"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/Service_tel"
                        android:textColor="@color/black_shou"
                        android:textSize="@dimen/f15"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/loction"
                        android:layout_centerVertical="true"

                        android:layout_width="@dimen/d15"
                        android:layout_height="@dimen/d15" />
                    <TextView
                        android:text="暂无定位"
                        android:maxEms="15"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/city"
                        android:layout_marginLeft="@dimen/d20"
                        android:textColor="@color/black_shou"
                        android:textSize="@dimen/f15"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/right_icon"

                        android:layout_width="@dimen/d15"
                        android:layout_height="@dimen/d15" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/gray_line"
                android:layout_height="0.1dp" />
            <RelativeLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.example.yuzishun.clearservice.Custom.ClearEditText
                    android:id="@+id/tel_cltext"
                    android:gravity="top"
                    android:paddingTop="@dimen/d10"
                    android:hint="@string/tel_xx"
                    android:textSize="@dimen/f15"
                    android:layout_marginLeft="@dimen/d25"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:background="@color/everoneActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:text="@string/down_id"
                android:id="@+id/button_cun"
                android:layout_marginTop="@dimen/d30"
                android:layout_marginLeft="@dimen/d30"
                android:layout_marginRight="@dimen/d30"
                android:textColor="@drawable/button_color_login_rigsg"
                android:background="@drawable/login_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
