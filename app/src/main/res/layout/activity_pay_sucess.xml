<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.clearservice.activity.mainfragment_activity.PaySucessActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40">
        <TextView
            android:text="完成"
            android:id="@+id/finish"
            android:textColor="@color/blue2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d25"
            android:textSize="@dimen/f14"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/paysuccess"
                        android:layout_width="@dimen/d25"
                        android:layout_height="@dimen/d25" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="支付成功"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black_shou"
                        android:textSize="@dimen/f20"
                        android:layout_marginLeft="@dimen/d5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="实付："
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_shou"
                        android:textSize="@dimen/f14"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/money_text"
                        android:text="¥30:00"
                        android:layout_centerVertical="true"
                        android:textColor="@color/blue2"
                        android:textSize="@dimen/f14"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="查看订单"
                android:id="@+id/look_order"
                android:layout_centerHorizontal="true"
                android:textColor="@color/blue2"
                android:textSize="@dimen/f14"

                android:background="@drawable/home_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d30" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
