<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.clearservice.activity.mainfragment_activity.SubmissionActivity">

    <include layout="@layout/title_text"></include>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/everoneActivity"
        android:layout_height="@dimen/d10" />

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_chosse"
                android:layout_weight="1.1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="0.4"
                    android:paddingLeft="@dimen/d25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView

                        android:id="@+id/loction"
                        android:src="@mipmap/loction"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/d20"
                        android:layout_height="@dimen/d20" />

                    <TextView
                        android:id="@+id/visibility_text"
                        android:text="请选择地址"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tel_xx"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:background="@null"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/d15"
                        android:gravity="center"
                        android:text="@string/tel_tel"
                        android:paddingLeft="@dimen/d10"
                        android:layout_toRightOf="@+id/loction"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/name"
                        android:visibility="visible"
                        android:paddingLeft="@dimen/d10"
                        android:layout_toRightOf="@+id/loction"
                        android:text="@string/name_idid"
                        android:layout_above="@+id/tel_xx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/iphone_id"
                        android:id="@+id/phone"
                        android:visibility="visible"

                        android:layout_toRightOf="@+id/name"
                        android:layout_above="@+id/tel_xx"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/right_icon"

                        android:layout_width="@dimen/d15"
                        android:layout_height="@dimen/d15" />
                </RelativeLayout>



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/everoneActivity"
                android:layout_height="@dimen/d10" />
            <LinearLayout
                android:id="@+id/choosetime"
                android:layout_weight="1.3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="0.4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/Service_time"
                        android:text="@string/chooseService"
                        android:textColor="@color/black_shou"
                        android:textSize="@dimen/f14"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/right_icon"

                        android:layout_width="@dimen/d15"
                        android:layout_height="@dimen/d15" />
                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/everoneActivity"
                android:layout_height="@dimen/d10" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/service_image"
                        android:padding="@dimen/d10"
                        android:layout_width="@dimen/d80"
                        android:layout_height="@dimen/d80" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="家庭保洁一小时"
                        android:id="@+id/text_work"
                        android:textColor="@color/black_shou"
                        android:textSize="@dimen/f14"
                        android:layout_marginLeft="@dimen/d10"

                        android:layout_marginTop="@dimen/d20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="¥30"
                        android:id="@+id/money_text"
                        android:textSize="@dimen/f14"

                        android:textColor="@color/red_one"
                        android:layout_below="@+id/text_work"
                        android:layout_marginLeft="@dimen/d10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:background="@color/everoneActivity"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="@color/white"

                android:layout_width="match_parent"
                android:layout_height="@dimen/d50">
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="实际付款"
                        android:id="@+id/moneyt"
                        android:textSize="@dimen/f16"
                        android:textColor="@color/frayu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="¥30"
                        android:id="@+id/money_text2"
                        android:textSize="@dimen/f16"
                        android:textColor="@color/blue2"
                        android:layout_toRightOf="@+id/moneyt"
                        android:layout_marginLeft="@dimen/d10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/paylayout"
                    android:background="@color/blue2"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="立即支付"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
