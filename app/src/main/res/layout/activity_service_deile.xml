<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.clearservice.activity.myframnet_Activity.ServiceDeileActivity">

    <include layout="@layout/title_text"></include>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/everoneActivity"
        android:layout_height="@dimen/d10" />

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/d25"
                android:layout_marginRight="@dimen/d25"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="家庭保洁-开荒保洁"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/f14"
                    android:textColor="@color/black_shou"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="待下单"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/f14"
                    android:textColor="@color/blue2"
                    android:layout_alignParentRight="true"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:layout_weight="1.4"
                android:layout_marginRight="@dimen/d25"
                android:layout_marginLeft="@dimen/d25"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@mipmap/ceshitwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.4"
                android:layout_marginRight="@dimen/d25"
                android:layout_marginLeft="@dimen/d25"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="这是描述，描述的什么呢，反正大致意思就是这个app很棒，很好，很终生"
                    android:textColor="@color/gray_text"
                    android:layout_marginTop="@dimen/d15"
                    android:textSize="@dimen/f12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:background="@color/everoneActivity"
                android:layout_height="@dimen/d10" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_weight="1.8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="服务时间"
                            android:textColor="@color/black_shou"
                            android:textSize="@dimen/f14"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="2小时"
                            android:textColor="@color/black_shou"
                            android:textSize="@dimen/f14"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/gray"
                    android:layout_height="1dp" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_weight="1.8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="服务时间"
                            android:textColor="@color/black_shou"
                            android:textSize="@dimen/f14"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="2018-07-19 10:00"
                            android:textColor="@color/black_shou"
                            android:textSize="@dimen/f14"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/everoneActivity"
                android:layout_height="@dimen/d10" />
            <LinearLayout
                android:layout_weight="1.1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="0.4"
                    android:paddingLeft="@dimen/d25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/loction"
                        android:src="@mipmap/loction"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/d20"
                        android:layout_height="@dimen/d20" />
                    <TextView
                        android:id="@+id/tel_xx"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:background="@null"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/d15"
                        android:gravity="center"
                        android:text="@string/tel_tel"
                        android:paddingLeft="@dimen/d10"
                        android:layout_toRightOf="@+id/loction"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/name"
                        android:paddingLeft="@dimen/d10"
                        android:layout_toRightOf="@+id/loction"
                        android:text="@string/name_idid"
                        android:layout_above="@+id/tel_xx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/iphone_id"
                        android:layout_toRightOf="@+id/name"
                        android:layout_above="@+id/tel_xx"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/everoneActivity"
                android:layout_height="@dimen/d10" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="应征商家"
                        android:textColor="@color/black_shou"
                        android:textSize="@dimen/f14"
                        android:layout_marginLeft="@dimen/d25"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/gray"
                    android:layout_height="1dp" />
                <LinearLayout
                    android:layout_weight="1.1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/d25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@mipmap/cehsi"
                            android:layout_margin="@dimen/d5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="洁士家政"
                                android:layout_alignParentBottom="true"
                                android:textSize="@dimen/f14"
                                android:id="@+id/name_text"

                                android:textColor="@color/black_shou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="¥30：00"
                                android:layout_alignParentBottom="true"
                                android:textSize="@dimen/f12"
                                android:layout_marginLeft="@dimen/d10"
                                android:layout_toRightOf="@+id/name_text"
                                android:textColor="@color/blue2"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="服务描述：服务描述，服务描述"
                                android:textSize="@dimen/f8"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:text="立即购买"
                            android:id="@+id/pay_button"
                            android:background="@drawable/login_select"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/d30" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
